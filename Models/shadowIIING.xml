<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>shadowIIING.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadowIIING</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadowIIING</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>shadowIIING</object-name>
    <property>orientation/pitch-deg</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>shadowIIING</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>shadowIIING</object-name>
   <property>position/gear-agl-ft</property>
   <factor> -0.3 </factor>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>

 </animation>

</PropertyList>

