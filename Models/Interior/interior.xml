<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intcanope</object-name>
    <object-name>inttourcanope</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/MirageIII/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.559 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.103 </z-m>
      <roll-deg>     0 </roll-deg>
      <pitch-deg>  -10 </pitch-deg>
      <heading-deg>  0 </heading-deg>
    </offsets>
  </model>

  <model>
    <path>Aircraft/MirageIII/Models/Interior/Panel/center/center.xml</path>
    <offsets>
      <x-m> -3.324 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.487 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/MirageIII/Models/Interior/Panel/left/left.xml</path>
    <offsets>
      <x-m> -2.764 </x-m>
      <y-m> -0.361 </y-m>
      <z-m> -0.487 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/MirageIII/Models/Interior/Panel/right/right.xml</path>
    <offsets>
      <x-m> -2.764 </x-m>
      <y-m>  0.361 </y-m>
      <z-m> -0.487 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/MirageIII/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.499 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.247 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntEnsembleCanope</name>
    <object-name>intcanope</object-name>
    <object-name>inttourcanope</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntEnsembleCanope</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 45 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.921 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.460 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

